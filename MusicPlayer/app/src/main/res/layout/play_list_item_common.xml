<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/playing"
        android:layout_width="@dimen/playing_sign_width"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:background="@android:color/white"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/play_indicator"
        android:layout_width="41.0dip"
        android:layout_height="41.0dip"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="9.0dip"
        android:clickable="true" />

    <TextView
        android:id="@+id/line1"
        style="@style/playlist_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="10.0dip"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:paddingTop="4.0dip"
        android:singleLine="true"
        android:textSize="16.0dip" />

    <TextView
        android:id="@+id/line3"
        style="@style/playlist_item_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/line1"
        android:layout_marginLeft="10.0dip"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:paddingBottom="2.0dip"
        android:singleLine="true"
        android:textSize="12.0dip" />

    <ImageView
        android:id="@+id/downloading_ex"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/download_ex_pro_color_height"
        android:visibility="gone" />

</merge>